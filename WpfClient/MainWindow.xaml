                    </ListBox>
                    <Label x:Name="label11_Copy" Content="Repository File List " HorizontalAlignment="Left" Margin="362,0,0,0" VerticalAlignment="Top" Width="135" Height="30"/>
                    <Button x:Name="button" Content="Send" HorizontalAlignment="Left" Margin="257,109,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="button1" Content="Get" HorizontalAlignment="Left" Margin="257,140,0,0" VerticalAlignment="Top" Width="75"/>
