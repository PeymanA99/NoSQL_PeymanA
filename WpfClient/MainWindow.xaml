                </Grid>
            </TabItem>
            <TabItem Header="Clients Console" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="-90.8,0,0,0">
                <Grid Background="#FFE5E5E5" Margin="-6,0,5.8,-0.2">
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="100" Margin="75,30,0,0" VerticalAlignment="Top" Width="155" SelectedIndex="0" IsSynchronizedWithCurrentItem="False">
