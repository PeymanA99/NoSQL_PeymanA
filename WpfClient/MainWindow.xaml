                        </Grid>
                        <ComboBox x:Name="QcomboBox" HorizontalAlignment="Left" Margin="25,32,0,0" VerticalAlignment="Top" Width="245" Grid.ColumnSpan="3">
                            <ComboBoxItem Content="R7a-Value of Specified key" HorizontalAlignment="Left" Width="165"/>
                            <ComboBoxItem Content="R7b-Children of Specified key" HorizontalAlignment="Left" Width="165"/>
                            <ComboBoxItem Content="R7c-Set of all keys Matching Pattern" HorizontalAlignment="Left" Width="204"/>
