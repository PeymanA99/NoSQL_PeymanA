                    <Label x:Name="label1" Content="Desc" HorizontalAlignment="Left" Margin="29,100,0,0" VerticalAlignment="Top" Width="57" Height="23"/>
                    <Label x:Name="label2" Content="DateTime" HorizontalAlignment="Left" Margin="29,125,0,0" VerticalAlignment="Top" Height="29"/>
