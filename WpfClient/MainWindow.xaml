                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="2.454"/>
                                <RotateTransform Angle="-0.041"/>
                                <TranslateTransform X="0.755" Y="0.038"/>
                            </TransformGroup>
