                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.579"/>
                                <RotateTransform/>
                                <TranslateTransform X="1.072"/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                    </ListBox>
                    <ListBox Grid.Row="5" Grid.ColumnSpan="5" x:Name="rcvmsgs" Margin="4.6,0.2,14.8,14.8" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
