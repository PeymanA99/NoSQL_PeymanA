                    </Grid.ColumnDefinitions>
                    <Grid.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.OpacityMask>

                    <Grid HorizontalAlignment="Left" Height="270" VerticalAlignment="Top" Width="499" Grid.ColumnSpan="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180*"/>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="289*"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox HorizontalAlignment="Left" Margin="150.2,4,0,0" Width="139" Height="29" VerticalAlignment="Top" Stretch="Fill" Grid.Column="2">
