                        </Viewbox>
                        <Button x:Name="sendQuerybutton" Content="Send Query" HorizontalAlignment="Left" Margin="75,197,0,0" VerticalAlignment="Top" Width="101" RenderTransformOrigin="0.293,0.167" FontSize="13.333" Click="sendQuerybutton_Click" Height="23"/>
