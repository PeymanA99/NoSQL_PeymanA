                    <TextBox Grid.Column= "5" x:Name="rStat" Height="20" VerticalAlignment="Top" Margin="15.4,30,13.8,0" Grid.RowSpan="2"/>
                    <Label Grid.Row="2" Grid.Column= "1" Height="20" VerticalAlignment="Bottom" Margin="4.6,0,34,0.2" Padding="5 0 5 0" Content="Remote Address"/>
                    <Label Grid.Row="2" Grid.Column= "3" Height="20" VerticalAlignment="Bottom" Margin="15,0,25.4,0.2" Padding="5 0 5 0" Content="Port"/>
                    <Label Grid.Row="2" Grid.Column= "4" Height="20" VerticalAlignment="Bottom" Margin="14.6,0,10.6,0.2" Padding="5 0 5 0"/>
                    <Label Grid.Row="2" Grid.Column= "5" Height="20" VerticalAlignment="Bottom" Margin="36.4,0,36.8,0.2" Padding="5 0 5 0" Content="Status"/>
