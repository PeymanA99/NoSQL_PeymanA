                    <DatePicker x:Name="toDateBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="75,166,0,0" VerticalAlignment="Top" Width="105"/>
                    <Label x:Name="Q" Content="Query Results" Grid.Column="1" HorizontalAlignment="Left" Margin="52,215,0,0" VerticalAlignment="Top" Width="88"/>
                    <Label x:Name="label10" Content="Msg Travel time" Grid.Column="4" HorizontalAlignment="Left" Margin="55.4,79,0,0" VerticalAlignment="Top" Width="184"/>
                    <TextBox x:Name="msgTimetextBox" Grid.Column="4" HorizontalAlignment="Left" Height="25" Margin="55.4,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
