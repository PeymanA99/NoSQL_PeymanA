                    </TextBox>
                    <TextBox x:Name="matchingtextBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="75,96,0,0" TextWrapping="Wrap" Text="Pattern" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.391,0.243"/>
