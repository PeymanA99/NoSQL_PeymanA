                        <Label x:Name="label9" Content="To Date" HorizontalAlignment="Left" Margin="15,165,0,0" VerticalAlignment="Top" Width="52"/>
                        <DatePicker x:Name="fromDateBox" HorizontalAlignment="Left" Margin="75,131,0,0" VerticalAlignment="Top" Width="105"/>
                    </Grid>
                    <TextBox x:Name="QueryResultText" Grid.Column="3" HorizontalAlignment="Right" Height="20" Margin="0,40,58.8,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Grid.ColumnSpan="2" Visibility="Hidden"/>
                    <TextBox x:Name="queryResultsText" Grid.Column="1" HorizontalAlignment="Left" Height="196" Margin="52,241,0,0" TextWrapping="Wrap" Text="QUERY RESULTS DISPLAY HERE" VerticalAlignment="Top" Width="317" Grid.ColumnSpan="4"/>
