                    <TextBox Grid.Row="2" Grid.Column= "3" x:Name="lPort" Height="20" VerticalAlignment="Top" Margin="15,30.2,25.4,0" Grid.RowSpan="2"/>
                    <Button Grid.Row="2" Grid.Column= "4" x:Name="send" Height="20" VerticalAlignment="Top" Margin="14.6,30.2,14.6,0" RenderTransformOrigin="0.504,0.5" Click="send_Click" Grid.RowSpan="2" Content="Send"/>
